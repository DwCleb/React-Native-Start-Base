{
  "name": "ReactNativeStartBase",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android:prod": "export ENVFILE=.env.prod && react-native run-android",
    "android:hml": "export ENVFILE=.env.staging && react-native run-android",
    "android:dev": "export ENVFILE=.env.dev && react-native run-android",
    "android:build:dev": "yarn install && cd android && ./gradlew clean  && export ENVFILE=.env.dev && ./gradlew assembleRelease && cd ..",
    "android:build:prod": "yarn install && cd android && ./gradlew clean  && export ENVFILE=.env.prod && ./gradlew assembleRelease && cd ..",
    "android:build:hml": "yarn install && cd android && ./gradlew clean  && export ENVFILE=.env.staging && ./gradlew assembleRelease && cd ..",
    "android:build:dev:debug": "yarn install && cd android && ./gradlew clean  && export ENVFILE=.env.dev && ./gradlew assembleDebug && cd ..",
    "android:build:prod:debug": "yarn install && cd android && ./gradlew clean  && export ENVFILE=.env.prod && ./gradlew assembleDebug && cd ..",
    "android:build:hml:debug": "yarn install && cd android && ./gradlew clean  && export ENVFILE=.env.staging && ./gradlew assembleDebug && cd ..",
    "ios": "react-native run-ios --simulator='iPhone 12'",
    "ios:prod": "export ENVFILE=.env.prod && yarn ios",
    "ios:hml": "export ENVFILE=.env.staging && yarn ios",
    "ios:dev": "export ENVFILE=.env.dev &&  yarn ios",
    "ios:build": "yarn install && cd ios && pod install && export ENVFILE=.env.prod && xcodebuild -workspace easydelivery.xcworkspace -scheme easydelivery -configuration AppStoreDistribuition archive -archivePath ./easydelivery.xcarchive && xcodebuild -exportArchive -archivePath ./easydelivery.xcarchive -exportPath ./easydelivery.ipa -exportOptionsPlist ./exportOptions.plist",
    "start": "react-native start",
    "test": "jest",
    "ts-check": "tsc",
    "lint": "eslint --ext .tsx,.ts .",
    "format-staged-code": "pretty-quick --staged --pattern \"**/*.ts{,x}\"",
    "static-code-validator": "yarn ts-check && yarn lint",
    "pre-commit-hook": "yarn format-staged-code",
    "pre-push-hook": "yarn coverage"
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.6.2",
    "@react-native-community/masked-view": "^0.1.7",
    "@react-navigation/bottom-tabs": "^5.7.3",
    "@react-navigation/native": "^5.9.2",
    "@react-navigation/stack": "^5.8.0",
    "axios": "^0.21.1",
    "formik": "^2.1.4",
    "i18next": "^19.1.0",
    "immer": "^8.0.1",
    "lodash.clonedeep": "^4.5.0",
    "lottie-ios": "3.1.8",
    "lottie-react-native": "^3.5.0",
    "react": "16.13.1",
    "react-error-boundary": "^3.1.0",
    "react-i18next": "^11.3.1",
    "react-is": "^16.8",
    "react-native": "0.63.2",
    "react-native-config": "^1.0.0",
    "react-native-confirmation-code-field": "^6.4.0",
    "react-native-contacts": "^6.0.3",
    "react-native-error-boundary": "^1.1.6",
    "react-native-flash-message": "^0.1.22",
    "react-native-gesture-handler": "^1.6.1",
    "react-native-keyboard-aware-scroll-view": "^0.9.1",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-localize": "^1.3.3",
    "react-native-masked-text": "^1.13.0",
    "react-native-modal": "^11.6.1",
    "react-native-modalize": "^2.0.4",
    "react-native-paper": "^4.7.1",
    "react-native-reanimated": "^1.7.1",
    "react-native-render-html": "^4.2.3",
    "react-native-safe-area-context": "^0.7.3",
    "react-native-safe-area-view": "^1.0.0",
    "react-native-screens": "^2.4.0",
    "react-native-shimmer-placeholder": "^2.0.6",
    "react-native-svg": "^12.1.0",
    "react-native-svg-transformer": "^0.14.3",
    "react-native-vector-icons": "^8.0.0",
    "styled-components": "^4.1.0",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.7",
    "@babel/runtime": "^7.10.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "@types/jest": "^24.0.24",
    "@types/react-native": "^0.62.1",
    "@types/react-native-vector-icons": "^6.4.5",
    "@types/react-test-renderer": "16.9.1",
    "@types/styled-components": "^5.1.7",
    "@types/yup": "^0.26.27",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-react-native-web": "^0.12.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "file-loader": "^6.0.0",
    "husky": "^4.0.6",
    "jest": "^25.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "metro-react-native-babel-preset": "^0.59.0",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "react-art": "^16.13.1",
    "react-docgen-typescript": "^1.16.1",
    "react-test-renderer": "16.13.1",
    "typescript": "^3.7.4",
    "webpack": "^4.42.1"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./jestSetupFile.js"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx$": "babel-jest",
      "^.+\\.ts$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|@react-native-community)"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.tsx",
      "<rootDir>/src/**/*.test.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit-hook"
    }
  }
}
